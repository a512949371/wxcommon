<view>
 <view class='img'>
  <image src='{{logo}}' mode='widthFix'></image>
 </view>
 <view class='formbox'>
    <view class='phone'>
     <view class='tip'>手机号：</view>
     <input placeholder='输入手机号' bindinput='inputdata' data-id='1'></input>
     <view class='tip bgred' bindtap='sendsms'>{{smsText}}</view>
    </view>
    <view class='sms'>
    <view class='tip'>验证码：</view>
    <input placeholder='验证码' bindinput='inputdata' data-id='2'></input>
    </view>
    <view class='btnbox'>
     <button bindtap='formSubmit'>登录</button>
    </view>
 </view>
</view>