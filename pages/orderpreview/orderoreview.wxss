/* pages/orderpreview/orderoreview.wxss */
image{
  width: 100%;
  display: block;
}
.fontsize36{
  font-size: 36rpx;
}
.c{
  zoom: 1
}
.c:after{
  content: "";
  display: block;
  clear: both;
  z-index: 1
}
.fl{
  float: left
}
.fr{
  float: right
}
.pr20{
  padding-right: 20rpx;
}
.pt10{
  padding-top: 10rpx;
}
.add-box{
  width: 100%;
  padding: 10rpx 20rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5
}
.add-box .addicon{
  width: 40rpx;
}
.add-box .addinfo{
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  color: #666
}
.add-box .addinfo .iconright{
  width: 40rpx;
}
.add-box .addinfo .flexbox{
  display: flex
}
.add-box .addinfo .flexbox .addbox{
  flex: 1
}
.class-box{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5
}
.class-box .left{
  max-width: 240rpx;
  min-width: 240rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.class-box .left image{
  width: 100%;
  display: block;
}
.class-box .right{
  z-index: 1;
  padding-top: 30rpx;
  flex: 1
}
.class-box .right .tit{
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap
}
.class-box .right .info{
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}
.class-box .right .price{
  font-size: 32rpx;
  color: #333
}
.class-box .right .price text{
  color: #f00
}
.class-box .right-btn{
  width: 100rpx;
  padding-right: 30rpx
}
.class-box .right-btn .btn{
  padding: 5rpx 10rpx;
  color: #f00;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
}
.dec-box{
  padding-top: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5
}
.dec-box .dec{
  font-size: 32rpx;
  text-align: right;
  color: #333;
  padding-top: 5rpx;
}
.coupons-box{
  padding: 20rpx;
  font-size: 32rpx;
  display: flex;
  box-sizing: border-box
}
.coupons-box .tit{
  flex: 1
}
.coupons-box .icon-right{
  width: 40rpx;
}
.buy-box{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background-color: #e9e9e9;
  display: flex;
  font-size: 32rpx;
  align-items: center
}
.buy-box .buy{
  flex: 1;
  padding-left: 20rpx;
}
.buy-box .btn{
  width: 200rpx;
  padding: 30rpx 0;
  text-align: center;
  background-color: #ff8900;
  color: #FFF
}
.red{
  color: #f00;
  padding-left: 10rpx;
}